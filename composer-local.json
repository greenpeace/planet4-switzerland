{
    "name": "greenpeace/planet4-switzerland",
    "description": "Greenpeace P4 Switzerland",
    "license": "MIT",
    "require": {
        "greenpeace/planet4-child-theme-switzerland" : "1.*",
        "wpackagist-plugin/wp-mail-smtp": "3.8.*",
        "greenpeace/planet4-gpch-plugin-blocks": "1.*",
        "greenpeace/planet4-gpch-plugin-tamaro": "1.*",
        "plugins/sitepress-multilingual-cms": "*",
        "plugins/wpml-string-translation": "*",
        "cedaro/gravity-forms-iframe": "2.0.*",
        "twilio/sdk": "^6.43",
        "giggsey/libphonenumber-for-php": "^8.13",
        "phplicengine/bitly": "^1.0",
        "wpackagist-plugin/term-management-tools": "*"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "scripts": {
        "core:language": "wp language core install de_CH;",
        "core:language2": "wp language core install fr_FR;",
        "install:plugin-acf": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/advanced-custom-fields-pro_6.1.6.zip",
        "install:plugin-gravityformszapier": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/gravityformszapier_4.2.1.zip",
        "install:plugin-gravityformspolls": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/gravityformspolls_4.0.1.zip",
        "install:plugin-gravityformsturnstyle": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/gravityformsturnstile_1.0.0.zip",
        "install:plugin-swf": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/social-warfare_4.4.1.zip",
        "install:plugin-swfpro": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/social-warfare-pro_4.4.1.zip",
        "site:custom": [
            "@core:language",
            "@core:language2",
            "@install:plugin-acf",
            "@install:plugin-gravityformszapier",
            "@install:plugin-gravityformspolls",
            "@install:plugin-gravityformsturnstyle",
            "@install:plugin-swf",
            "@install:plugin-swfpro"
        ]
    }
}
