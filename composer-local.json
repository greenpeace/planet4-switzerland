{
	"name": "greenpeace/planet4-switzerland",
	"description": "Greenpeace P4 Switzerland",
	"license": "MIT",
	"require": {
		"greenpeace/planet4-child-theme-switzerland" : "1.*",
		"wpackagist-plugin/duplicate-post": "3.*",
		"wpackagist-plugin/wp-mail-smtp": "1.7.*",
		"greenpeace/planet4-gpch-plugin-blocks": "0.*",
		"greenpeace-gpch/wp-raisenow-community-plugin": "1.*"
	},
	"scripts": {
		"core:language": "wp language core install de_DE;",
		"core:language2": "wp language core install fr_FR;",
		"install:plugin-wpml": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/sitepress-multilingual-cms.4.3.4.zip",
		"install:plugin-wpml-management": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wpml-translation-management.2.9.2.zip",
		"install:plugin-wpml-stringtranslate": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wpml-string-translation.3.0.4.zip",
		"install:plugin-wpimport": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wp-all-import-pro_4.6.0.zip",
		"install:plugin-wpimport-acf": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wp-all-import-acf-add-on_3.2.5.zip",
		"install:plugin-wpml-allimport": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wpml-all-import.2.0.5.zip",
		"install:plugin-acf": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/advanced-custom-fields-pro_5.8.9.zip",
		"install:plugin-gravityforms": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/gravityforms_2.4.17.17.zip",
		"install:plugin-gravityformszapier": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/gravityformszapier_3.2.1.zip",
		"install:plugin-gravityformsgutenberg": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/gravityformsgutenberg_1.0-rc-1.4.zip",
		"install:plugin-swf": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/social-warfare_3.6.1.zip",
		"install:plugin-swfpro": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/social-warfare-pro_3.6.1.zip",

		"site:custom": [
			"@core:language",
			"@core:language2",
			"@install:plugin-wpml",
			"@install:plugin-wpml-management",
			"@install:plugin-wpml-stringtranslate",
			"@install:plugin-acf",
			"@install:plugin-gravityforms",
			"@install:plugin-gravityformszapier",
			"@install:plugin-gravityformsgutenberg",
			"@install:plugin-wpimport",
			"@install:plugin-wpimport-acf",
			"@install:plugin-wpml-allimport",
			"@install:plugin-swf",
			"@install:plugin-swfpro"
		]
	}
}
