{
	"name": "greenpeace/planet4-switzerland",
	"description": "Greenpeace P4 Switzerland",
	"license": "MIT",
	"require": {
		"greenpeace/planet4-child-theme-switzerland" : "0.*",
		"wpackagist-plugin/wp-stateless": "2.1.7",
		"greenpeace/planet4-gpch-gutenberg-blocks": "dev-master"
	},
	"scripts": {
		"core:language": "wp language core install de_DE;",
		"core:language2": "wp language core install fr_FR;",
		"install:plugin-wpml": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/sitepress-multilingual-cms.4.2.5.zip",
		"install:plugin-wpml-management": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wpml-translation-management.2.8.4.zip",
		"install:plugin-wpml-stringtranslate": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wpml-string-translation.2.10.3.zip",
		"install:plugin-wpimport": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wp-all-import-pro_4.5.4.zip",
		"install:plugin-acf": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/advanced-custom-fields-pro.5.8.0-beta4.1.zip",

		"site:custom": [
			"@core:language",
			"@core:language2",
			"@install:plugin-wpml",
			"@install:plugin-wpml-management",
			"@install:plugin-wpml-stringtranslate",
			"@install:plugin-wpimport",
			"@install:plugin-acf"
		]
	}
}
