{
    "name": "greenpeace/planet4-switzerland",
    "description": "Greenpeace P4 Switzerland",
    "license": "MIT",
    "require": {
        "greenpeace/planet4-child-theme-switzerland" : "1.*",
        "wpackagist-plugin/wp-mail-smtp": "3.1.*",
        "greenpeace/planet4-gpch-plugin-blocks": "1.*",
        "greenpeace-gpch/wp-raisenow-community-plugin": "1.*",
        "plugins/sitepress-multilingual-cms": "*",
        "plugins/wpml-translation-management": "*",
        "plugins/wpml-string-translation": "*",
        "cedaro/gravity-forms-iframe": "2.0.*",
        "twilio/sdk": "^6.21",
        "giggsey/libphonenumber-for-php": "^8.12",
        "phplicengine/bitly": "^1.0"
    },
    "scripts": {
        "core:language": "wp language core install de_CH;",
        "core:language2": "wp language core install fr_FR;",
        "install:plugin-acf": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/advanced-custom-fields-pro_5.10.2.zip",
        "install:plugin-gravityformszapier": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/gravityformszapier_4.1.1.zip",
        "install:plugin-gravityformspolls": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/gravityformspolls_3.9.zip",
        "install:plugin-swf": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/social-warfare_4.3.0.zip",
        "install:plugin-swfpro": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/social-warfare-pro_4.3.0.zip",
        "install:plugin-gravityformshubspot": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/gravityformshubspot_1.7.zip",
        "install:plugin-semrushwritingassist": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/semrush-seo-writing-assistant_1.2.0.zip",

        "site:custom": [
            "@core:language",
            "@core:language2",
            "@install:plugin-acf",
            "@install:plugin-gravityformszapier",
            "@install:plugin-gravityformspolls",
            "@install:plugin-swf",
            "@install:plugin-swfpro",
            "@install:plugin-gravityformshubspot",
            "@install:plugin-semrushwritingassist"
        ]
    }
}
